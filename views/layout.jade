mixin nav-item(literal, url)
  li.bes.nav.item
    a(href= url)= literal

doctype html
html(lang="zh_cn")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    meta(name="description", content="")
    meta(name="author", content="")
    title= title + " - 大数据技术与嵌入式系统实验室"
    link(href="/_fw/bootstrap/css/bootstrap.min.css", rel="stylesheet")
    link(href="/_fw/font-awesome/css/font-awesome.min.css", rel="stylesheet")
    link(href="/_fw/angular/angular-csp.css", rel="stylesheet")
    link(href="/stylesheets/blog-home.css", rel="stylesheet")
    link(href="/stylesheets/site.css", rel="stylesheet")
  body
    // Navigation
    nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          button.navbar-toggle(type="button", data-toggle="collapse", data-target="#bes-nav")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="/")
            i.fa.fa-rocket
            span  BES
            span.light  Lab
        #bes-nav.collapse.navbar-collapse
          ul.nav.navbar-nav
            +nav-item("实验室概况", "/about")
            +nav-item("科研成果",   "/achievement")
            +nav-item("合作交流",   "/cooperate")
            +nav-item("人才培养",   "/team")
            +nav-item("新闻动态",   "/news")
            +nav-item("联系我们",   "/contact")
            +nav-item("开发日志",   "/dev")
          if show_search
            form.navbar-form.navbar-right
              input.form-control(type='text', placeholder='Search')
              button.btn.btn-default(type='submit') Submit
    // Page Content
    block content
    // Footer
    footer
      .row
        .col-lg-12.bes.footer.text-center
          hr
          p Copyright &#169; #[i.fa.fa-rocket] BESLab 2015
    script(src="/_fw/jquery/jquery.js")
    script(src="/_fw/underscore/underscore.js")
    script(src="/_fw/angular/angular.min.js")
    script(src="/_fw/bootstrap/js/bootstrap.min.js")
    script(src="/javascripts/site.js")
    block extra-script
