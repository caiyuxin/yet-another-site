include sidebar.jade

extends layout

block content
  .col-md-1
  .col-md-10(ng-app="Contact")
    .bes.about
      h1 联系地址
      ul.list-unstyled
    div(ng-controller="ContactController")
      ul.nav.nav-tabs
        li(role='presentation')
          a(href='#', ng-click="set_page('main');", ng-class='{"active" : page == "main"}') 主楼
        li(role='presentation')
          a(href='#', ng-click="set_page('west');", ng-class='{"active" : page == "west"}') 西大楼
        li(role='presentation')
          a(href='#', ng-click="set_page('south');", ng-class='{"active" : page == "south"}') 南校区
      blockquote {{ address }}
      iframe.bes.contact.map(ng-src="{{ url }}", style="width: 100%; height: 400px;")

block extra-script
  script(src="/javascripts/contact.js")

