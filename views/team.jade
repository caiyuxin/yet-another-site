include sidebar
extends layout

mixin info-block(member)
  .col-sm-12.col-md-6.col-lg-4.bes.team.block
    .thumbnail
      img(src= member.icon, alt= member.name)
      .caption
        h3= member.name
        p= member.pos
        p= member.email

mixin info-blocks(members)
  .row
    each member in members
      +info-block(member)

block content
  .container
    .row
      .col-md-8
        +info-blocks(members)
      .col-md-4
        +sidebar(categories)


